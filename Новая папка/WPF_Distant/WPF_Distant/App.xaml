<Application x:Class="WPF_Distant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Enter.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="StandardLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Margin" Value="5,10,5,10"/>
            </Style>
            
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="5"/>
            </Style>

            <LinearGradientBrush x:Key="TopBarGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#505081" Offset="0.0"/>
                <GradientStop Color="#7070A0" Offset="1.0"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
